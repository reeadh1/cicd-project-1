pipeline {
    agent any
    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub')
    }
    stages {
        stage('Checkout') {
            steps {
                sh 'echo passed'
                git branch: 'main', url: 'https://github.com/arifislam007/spring-bot-jenkins-k8s.git'
            }
        }
        stage('Build and Test') {
            steps {
                sh 'ls -ltr'
                sh 'mvn clean package'
                script {
                    sh 'chmod -R 777 target'
                }
            }
        }
		stage('Update Deployment FIle') {
            steps {
                sh "sed -i 's/spring-bot:base/spring-bot:${BUILD_NUMBER}/' ./deployment.yml"
            }
        }
		stage("Push to Git Repository") {
			environment {
				GITHUB_TOKEN = "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"
				GIT_USER_NAME = "arifislam007"
				GIT_REPO_NAME = "spring-bot-jenkins-k8s.git"
			}
			steps {
				
				sh '''
					#git config --global user.email "islam.arif87@gmail.com"
					#git config --global user.name "arifislam007"
					git add deployment.yml
					git commit -m "deployment file updated"
					git push https://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@github.com/arifislam007/spring-bot-jenkins-k8s.git HEAD:main
				'''
				
			}
		}
		
    }
}
